#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/.pnpm/nodemon@3.1.0/node_modules/nodemon/bin/nodemon.js/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/.pnpm/nodemon@3.1.0/node_modules/nodemon/bin/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/.pnpm/nodemon@3.1.0/node_modules/nodemon/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/.pnpm/nodemon@3.1.0/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/.pnpm/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/node_modules:/home/nxtwave/reactjs/sessions/node_modules:/home/nxtwave/reactjs/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/nodemon/bin/nodemon.js/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/nodemon/bin/node_modules:/home/nxtwave/reactjs/sessions/routing-using-react-router-part-2/backend/node_modules/nodemon/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else 
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
